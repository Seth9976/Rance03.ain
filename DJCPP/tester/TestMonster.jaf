void test_ExLoading_Monster()
{
	int i;
	for (i = 0; i < g_monster.Numof(); ++i)
	{
		string n = "id[%s] name[%s] imageName[%s] hp[%d] exp[%d] gold[%d] attr[%s]" % g_monster[i].getId() % g_monster[i].getName() % g_monster[i].getImageName() % g_monster[i].getHp() % g_monster[i].getExp() % g_monster[i].getGold() % g_monster[i].getMonsterAttributeId();
		array@string m[3];
		int j;
		for (j = 0; j < 3; ++j)
		{
			MonsterAttack atk;
			atk = g_monster[i].getAttack(j, 100);
			m[j] = "| attr[%s] type[%d] param[%d] buffId[%s]" % atk.getAttributeId() % atk.getTargetType() % atk.getParam() % atk.getBuffId();
		}
		pass(n + m[0] + m[1] + m[2]);
	}
}

