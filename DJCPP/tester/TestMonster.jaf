void test_Battle_MonsterView()
{
	array@MonsterView view[3];
	array@MonsterInstance instance[3];
	int i;
	for (i = 0; i < instance.Numof(); ++i)
	{
		instance[i].init(g_monster[0].getId(), i, 0, 0);
		view[i].init(instance[i], g_battleBackgroundInfomation[0].getId(), 0);
		view[i].getIn();
	}
	int t;
	while (!g_mouse.isClick(1))
	{
		if (g_mouse.isClick(0))
		{
			int i;
			for (i = 0; i < instance.Numof(); ++i)
			{
				view[i].setTurn(t);
				instance[i].setPosition((instance[i].getPosition() + 2) % 3);
			}
			++t;
		}
		if (g_keyboard.isPress(90))
		{
			int i;
			for (i = 0; i < instance.Numof(); ++i)
			{
				int v = RAND(100);
				instance[i].setHp(instance[i].getHp() - v);
				view[i].setDamage(v, "", true, 0, 0, NULL);
			}
		}
		if (g_keyboard.isPress(88))
		{
			int i;
			for (i = 0; i < instance.Numof(); ++i)
			{
				int v = RAND(100);
				instance[i].setHp(instance[i].getHp() + v);
				view[i].setDamage(v, "", false, 0, 0, NULL);
			}
		}
		if (g_keyboard.isPress(67))
		{
			int i;
			for (i = 0; i < instance.Numof(); ++i)
			{
				int index = RAND(g_monsterBuff.Numof()) - 1;
				instance[i].addBuff(g_monsterBuff[index].getId());
			}
		}
		g_gameObjectManager.update();
		g_frameManager.updateFrame();
	}
}

