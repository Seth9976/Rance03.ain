void CASParts::SetFontProperty(ref CASCharSpriteProperty Property, int State)
{
	CASColor Color;
	Color = Property.GetColor();
	CASColor EdgeColor;
	EdgeColor = Property.GetEdgeColor();
	this.SetFont(Property.GetType(), State);
	this.SetFontSize(Property.GetSize(), State);
	this.SetFontBoldWeight(Property.GetBoldWeight(), State);
	this.SetFontEdgeWeight(Property.GetEdgeWeight(), State);
	this.SetFontColor(Color.GetR(), Color.GetG(), Color.GetB(), State);
	this.SetFontEdgeColor(EdgeColor.GetR(), EdgeColor.GetG(), EdgeColor.GetB(), State);
}

