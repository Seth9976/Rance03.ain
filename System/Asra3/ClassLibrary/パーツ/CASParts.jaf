CASParts::CASParts()
{
	this.m_PartsNumber = -1;
}

CASParts::~CASParts()
{
	this.Release();
}

void CASParts::Create()
{
	this.Release();
	this.m_PartsNumber = PARTS_GetFreeSystemPartsNumber();
	this.SetPos(0, 0);
}

void CASParts::Release()
{
	if (this.m_PartsNumber == -1)
	{
		return;
	}
	PARTS_Release(this.m_PartsNumber);
	this.m_PartsNumber = -1;
}

bool CASParts::IsExist()
{
	return this.m_PartsNumber != -1;
}

int CASParts::GetPartsNumber()
{
	return this.m_PartsNumber;
}

