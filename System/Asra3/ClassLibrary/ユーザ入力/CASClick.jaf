CASClick::CASClick()
{
	this.m_nKey = -1;
	this.m_bKeyDown = false;
	this.m_bFirstClickOff = false;
	this.m_nKeyDownOnObject = -2147483648;
	this.m_Trigger = false;
	this.m_bKeyDownLoop = false;
	this.m_bKeyPress = false;
	this.m_nPressFirstTime = 350;
	this.m_nPressTime = 50;
}

void CASClick::Init(int nKey, bool FirstKeyDownCancel)
{
	this.m_nKey = nKey;
	this.Reset(FirstKeyDownCancel);
}

void CASClick::Reset(bool FirstKeyDownCancel)
{
	this.m_bKeyDown = false;
	this.m_nKeyDownOnObject = -2147483648;
	this.m_bKeyDownLoop = false;
	this.m_bKeyPress = false;
	this.m_bFirstClickOff = FirstKeyDownCancel && AFL_IsKeyDown(this.m_nKey);
}

bool CASClick::IsFirstClick()
{
	if (this.m_nKey == -1)
	{
		return false;
	}
	if (!this.m_bFirstClickOff)
	{
		return false;
	}
	if (AFL_IsKeyDown(this.m_nKey))
	{
		if (!this.m_bKeyDown)
		{
			this.m_bKeyDown = true;
		}
	}
	else if (this.m_bKeyDown)
	{
		this.m_bKeyDown = false;
		this.m_bFirstClickOff = false;
	}
	return true;
}

bool CASClick::IsClick(int nOnObject)
{
	if (this.m_nKey == -1)
	{
		return false;
	}
	if (this.IsFirstClick())
	{
		return false;
	}
	if (AFL_IsKeyDown(this.m_nKey))
	{
		if (!this.m_bKeyDown)
		{
			this.m_bKeyDown = true;
			this.m_nKeyDownOnObject = nOnObject;
		}
	}
	else if (this.m_bKeyDown)
	{
		this.m_bKeyDown = false;
		if (nOnObject != -2147483648)
		{
			if (nOnObject == this.m_nKeyDownOnObject)
			{
				return true;
			}
		}
		else
		{
			return true;
		}
		this.m_nKeyDownOnObject = -2147483648;
	}
	return false;
}

bool CASClick::IsKeyDown()
{
	if (this.m_nKey == -1)
	{
		return false;
	}
	if (this.IsFirstClick())
	{
		return false;
	}
	return AFL_IsKeyDown(this.m_nKey);
}

bool CASClick::IsKeyTrigger()
{
	if (this.m_nKey == -1)
	{
		return false;
	}
	if (this.IsFirstClick())
	{
		return false;
	}
	if (AFL_IsKeyDown(this.m_nKey) && !this.m_Trigger)
	{
		this.m_Trigger = true;
		return true;
	}
	else if (AFL_IsKeyDown(this.m_nKey))
	{
		return false;
	}
	else
	{
		this.m_Trigger = false;
	}
	return false;
}

bool CASClick::IsKeyPress(int nOnObject)
{
	if (this.m_nKey == -1)
	{
		return false;
	}
	if (this.IsFirstClick())
	{
		return false;
	}
	if (AFL_IsKeyDown(this.m_nKey))
	{
		if (!this.m_bKeyPress)
		{
			this.m_bKeyPress = true;
			this.m_bKeyDownLoop = false;
			this.m_Timer.Reset();
			this.m_nKeyDownOnObject = nOnObject;
			return true;
		}
		if (nOnObject != this.m_nKeyDownOnObject)
		{
			return false;
		}
		if (!this.m_bKeyDownLoop)
		{
			if (this.m_Timer.Get() < this.m_nPressFirstTime)
			{
				return false;
			}
		}
		else if (this.m_Timer.Get() < this.m_nPressTime)
		{
			return false;
		}
		this.m_bKeyDownLoop = true;
		this.m_Timer.Reset();
		return true;
	}
	else if (this.m_bKeyPress)
	{
		this.m_bKeyPress = false;
		this.m_bKeyDownLoop = false;
		this.m_bFirstClickOff = false;
		this.m_nKeyDownOnObject = -2147483648;
	}
	return false;
}

