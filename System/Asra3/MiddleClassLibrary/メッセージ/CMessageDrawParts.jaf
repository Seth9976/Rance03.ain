CMessageDrawParts::CMessageDrawParts()
{
	this.m_bFixed = false;
	this.m_PartsNumber = PARTS_GetFreeSystemPartsNumber();
}

CMessageDrawParts::~CMessageDrawParts()
{
	if (this.m_PartsNumber == -1)
	{
		return;
	}
	PARTS_Release(this.m_PartsNumber);
	this.m_PartsNumber = -1;
}

