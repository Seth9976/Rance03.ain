void CMessageDrawParts::SetFontProperty(ref CASCharSpriteProperty Property)
{
	CASColor Color;
	Color = Property.GetColor();
	CASColor EdgeColor;
	EdgeColor = Property.GetEdgeColor();
	this.SetFont(Property.GetType());
	this.SetFontSize(Property.GetSize());
	this.SetFontBoldWeight(Property.GetBoldWeight());
	this.SetFontEdgeWeight(Property.GetEdgeWeight());
	this.SetFontColor(Color.GetR(), Color.GetG(), Color.GetB());
	this.SetFontEdgeColor(EdgeColor.GetR(), EdgeColor.GetG(), EdgeColor.GetB());
}

