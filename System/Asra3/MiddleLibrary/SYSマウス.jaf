void SYS_ホイール回転時刻クリア()
{
	int Forward;
	int Back;
	AFL_MouseWheel_GetCount(Forward, Back);
	if (Forward != 0 || Back != 0)
	{
		_g_Ｍ送ホイール確認時刻 = system.GetTime();
	}
}

