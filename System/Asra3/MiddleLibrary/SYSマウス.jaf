bool SYS_ホイールバック即確認()
{
	int Forward;
	int Back;
	AFL_MouseWheel_GetCount(Forward, Back);
	return Back != 0;
}

bool SYS_ホイールバック確認()
{
	if (!SYS_ホイールバック即確認())
	{
		return false;
	}
	int nCurrentTime = system.GetTime();
	if (_g_Ｍ送ホイール確認時刻 == -2147483648)
	{
		_g_Ｍ送ホイール確認時刻 = nCurrentTime;
		return true;
	}
	if (nCurrentTime > _g_Ｍ送ホイール確認時刻 + 200)
	{
		_g_Ｍ送ホイール確認時刻 = nCurrentTime;
		return true;
	}
	return false;
}

